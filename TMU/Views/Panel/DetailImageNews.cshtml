@model List<Data.TMU.Model.News.FileNews>
@{
    ViewData["Title"] = "عکس های خبر";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}





<main class="ContentPanel">
    @*    <form asp-action="ListUser" method="get" id="form">

        <input type="hidden" id="IdActive" name="IdActive" value="none" />

        </form>*@
    <partial name="panelPartial" />

    <div class="mainPanel">
        <div class="IconPanel">
            <a href="/panel/CreatImageNews/@ViewBag.ID" type="button" class="IC1"><span class="fe fe-filter fe-12 mr-2"></span>ثبت عکس</a>


        </div>
        <div class="content">
            <header>
                <h2>ثبت عکس</h2>
            </header>
            <div class="linner">
                <form asp-action="DetailImageNews" method="post" id="form">
                    <input type="hidden" name="SelectFirst" value="" id="SelectFirst" />
                    <div class="col-12 col-xl-10">

                        <div class="row">
                            @{
                                if (Model.Count != 0)
                                {
                                    int i = 0;
                                    foreach (var item in Model)
                                    {
                                        <input type="hidden" asp-for="@item.Id" />
                                        <input type="hidden" asp-for="@item.PathFile" />
                                        <div class="col-md-3">
                                            <div class="card shadow mb-4">
                                                <div class="card-body text-center">
                                                    <div class="avatar avatar-lg mt-4 w-100">
                                                        <a href="">
                                                            <img src="/Img/News/thum/@item.PathFile" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="card-text my-2">
                                                        <label for="simpleinput">عنوان عکس</label>
                                                        <input asp-for="@item.TitelFileNews" type="text" id="simpleinput" placeholder="متن عکس را وارد کنید" class="form-control">
                                                        <span asp-validation-for="@item.TitelFileNews"></span>
                                                    </div>
                                                    <div class="custom-control custom-switch">
                                                        @{
                                                            if (item.IsFirst == true)
                                                            {
                                                                <input type="checkbox" class="custom-control-input" value="True" name="@item.IsFirst" id="@item.Id" onclick="submitchecked(@item.Id)" checked>

                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" class="custom-control-input" value="True" name="@item.IsFirst" id="@item.Id" onclick="submitchecked(@item.Id)">

                                                            }

                                                            <label class="custom-control-label" for=@item.Id>@(item.IsFirst==true?"به عنوان عکس اول قرار گیرد؟":"به عنوان عکس اول انتخاب شد")</label>
                                                        }
                                                    </div>

                                                    <div class="col-md-3 mx-auto mb-3">
                                                        @{


                                                            <div class="custom-control custom-switch">
                                                                <input type="checkbox" value="@item.Id" name="CheckDelete" class="custom-control-input" id=@i>
                                                                <label class="custom-control-label" for=@i>حذف</label>
                                                            </div>
                                                            i++;
                                                        }
                                                    </div>

                                                </div> <!-- ./card-text -->
                                    </div>
                                        </div>
                                    }

                                }
                            }
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="submit" class="btngray">تغییرات</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script>
        function submitchecked(id_DN) {
            $("#SelectFirst").val(id_DN)
            $("#form").submit();

        }
    </script>
</main>



